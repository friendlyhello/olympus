#include <iostream>
using namespace std;

// Goal: Simple program that returns a single char on user input

// Function prototypes

void Welcome();
char GetUserInput();
void ReturnUserInput(char responseToPrint);


int main()
{

Welcome();

int answer = GetUserInput();
ReturnUserInput(answer);

}

// Function Definitions

void Welcome()
{
  cout << "Welcome!" << endl;
}

char GetUserInput()
{
  cout << "Please enter Y or N" << endl;

  char response;
  cin >> response;

  return response;
}

void ReturnUserInput(char responseToPrint)
{
  cout << "You entered: " << responseToPrint << endl;
}